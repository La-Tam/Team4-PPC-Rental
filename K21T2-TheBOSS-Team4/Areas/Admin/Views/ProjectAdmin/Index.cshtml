@model IEnumerable<K21T2_TheBOSS_Team4.Models.PROPERTY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>List of Project</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Data Table Example
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Avatar</th>
                        <th>Content</th>
                        <th>Price</th>
                        <th>UnitPrice</th>
                        <th>Area</th>
                        <th>BedRoom</th>
                        <th>PackingPlace</th>
                        <th>Created at</th>
                        <th>Create post</th>
                        <th>Note</th>
                        <th>Updated at</th>
                        <th>District Name</th>
                        <th>Status Name</th>
                        <th>Code Type</th>
                        <th>Street Name</th>
                        <th>Email</th>
                        <th>Email</th>
                        <th>Ward Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Avatar</th>
                        <th>Content</th>
                        <th>Price</th>
                        <th>UnitPrice</th>
                        <th>Area</th>
                        <th>BedRoom</th>
                        <th>PackingPlace</th>
                        <th>Created at</th>
                        <th>Create post</th>
                        <th>Note</th>
                        <th>Updated at</th>
                        <th>District Name</th>
                        <th>Status Name</th>
                        <th>Code Type</th>
                        <th>Street Name</th>
                        <th>Email</th>
                        <th>Email</th>
                        <th>Ward Name</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PropertyName)
                            </td>
                            <td>
                                <img src="~/Images/@item.Avatar"width="500px"/>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Content)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BedRoom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BathRoom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PackingPlace)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created_at)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Create_post)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Note)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Updated_at)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DISTRICT.DistrictName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PROJECT_STATUS.Status_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PROPERTY_TYPE.CodeType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.STREET.StreetName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.USER.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.USER1.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WARD.WardName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
